{% extends 'base.html.twig' %}

{% block head %}
	{{ parent() }}
{% endblock %}

{% block title %}Vista de documentos
{% endblock %}

{% block body %}
	{{ parent() }}
	<h1>Documentos de
		{{ student_name }}</h1>

	<div>
		<a href="{{ path('app_document_new', {'studentId': student_id}) }} " class="btn btn-success">Agregar documento</a>
	</div>

	{% if documents is not empty %}
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr>
						<th>NÃºmero de documento</th>
						<th>Nombre del documento</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for document in documents %}
						<tr>
							<td>{{ document.id }}</td>
							<td>{{ document.pdfFile }}</td>
							<td>
								<a href="{{ path('app_document_download', {'filename': document.pdfFile}) }}" class="btn btn-primary btn-sm" target="_blank" rel="noopener noreferrer">
									<i class="fas fa-file-pdf"></i>
									Ver PDF
								</a>
								<a href="{{ path('app_document_delete_preview', {'id': document.id}) }}" class="btn btn-danger btn-sm" target="_blank" rel="noopener noreferrer">
									<i class="fas fa-trash"></i>
									Eliminar
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% else %}
		<p>Este estudiante no tiene documentos.</p>
	{% endif %}

	<a href="{{ path('app_student_index') }}">Volver a la lista</a>

{% endblock %}
